<article class="post">

    <div class="picture">
        <img src="{{url}}" class="dog-photo-image"/>
    </div>
    <div class="post-content">
        <p class="name description-text">
            Name: {{name}}
        </p>
        <p class="breed description-text">
            Breed: {{breed}}
        </p>
        <p class= "price description-text">
            Adoption Fee: ${{price}}
        </p>
        <p class= "gender description-text">
            Gender: {{gender}}
        </p>
        <p class="description description-text">
            Description: {{description}}
        </p>
    </div>
</article>
